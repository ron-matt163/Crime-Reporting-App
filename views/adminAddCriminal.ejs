<html>
    <head>
        <%- include ('partials/head') -%>
        <style>
            .rowform {
                margin-bottom: 15px;
            }
            .container-fluid {
                margin-top: 5%;
                margin-bottom: 5%;
                border:black; 
                border-width:1px; 
                border-style:solid;
                border-radius: 25px;
                background-color: lightblue;
                color: black;
            }
            input {
                color: black;
            }
            .errmsg {
                margin-left: 15px;
            }
        </style>
        <script type="text/javascript">
            function myFunction() {
                var x = document.getElementsByClassName("errmsg");
                var y = document.getElementsByClassName("reqinput")
                var i;
                for (i = 0; i < y.length; i++) {
                    if(y[i].value.length == 0) {
                        x[i].style.display = "block";
                    }
                    else {
                        x[i].style.display = "none";
                    }
                }
            }
            function goBack() {
                window.history.back();
            }    
        </script>
        <title>VERITAS - Register</title>
    </head>
    <body>
        <%- include ('partials/loginNav') -%>
        <div class="container-fluid" style="align-content: center; width: 60%">
            <div class="row" style="margin-top: 15px;">
                <h2 class="header" style="font-size: 50px; margin-bottom: 50px;">Add Criminal</h2>
            </div>
            <div class="row formrow">
                <form method="POST" action="/admin/addCriminal" style="margin-left: 17.5%;" enctype="multipart/form-data">
                    <div class="row rowform">
                        <a onclick="goBack()" style = "padding-left: 695px; text-decoration: underline; color:navy">Go Back</a>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Name<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="name" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Height<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="height" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Weight<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="weight" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Prison<span style="color: red; font-size: small; margin: 5px;">*</span></label><br />
                        <select class="col-sm-8 reqinput" name="prison_id" style="width: 67%; height: 24px; margin: 5px; margin-left: 30px;" required="">
                            <% for (const i in prisons) { %>
                                <option value="<%= prisons[i].id %>"> <%= prisons[i].name %> </option>
                            <% } %>
                        </select>
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Phone no.<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="phone" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">E-mail<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="email" name="email" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Date of Birth<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="date" name="dob" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Address<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="address" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">City<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="city" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">State<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="state" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Country<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="country" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Photo</label>
                        <input class="col-sm-8" type="file" name="file" style="background-color: white;">
                    </div>
                    <button type="submit" style="margin-top: 15px;" onclick="myFunction()">Register</button>
                </form>
            </div>
        </div>
    </body>
</html>