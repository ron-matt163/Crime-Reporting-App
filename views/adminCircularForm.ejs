<html>
    <head>
        <%- include ('partials/head') -%>
        <style>
            .rowform {
                margin-bottom: 15px;
            }
            .container-fluid {
                margin-top: 5%;
                margin-bottom: 5%;
                border:black; 
                border-width:1px; 
                border-style:solid;
                border-radius: 25px;
                background-color: lightblue;
                color: black;
            }
            input {
                color: black;
            }
            .errmsg {
                margin-left: 15px;
            }
        </style>
        <script type="text/javascript">
            function myFunction() {
                var x = document.getElementsByClassName("errmsg");
                var y = document.getElementsByClassName("reqinput")
                var i;
                for (i = 0; i < y.length; i++) {
                    if(y[i].value.length == 0) {
                        x[i].style.display = "block";
                    }
                    else {
                        x[i].style.display = "none";
                    }
                }
            }
            function goBack() {
                window.history.back();
            }
        </script>
        <title>VERITAS - Add Circular</title>
    </head>
    <body>
        <%- include ('partials/loginNav') -%>
        <div class="container-fluid" style="align-content: center; width: 60%">
            <div class="row" style="margin-top: 15px;">
                <h2 class="header" style="font-size: 50px; margin-bottom: 50px;">Add Circular</h2>
            </div>
            <div class="row formrow">
                <form method="POST" action="/admin/addCircular" style="margin-left: 17.5%;">
                    <div class="row rowform">
                        <a onclick="goBack()" style = "padding-left: 695px; text-decoration: underline; color:navy">Go Back</a>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Circular Title<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="title" required="">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">File</label>
                        <input class="col-sm-8" type="file" name="file" style="background-color: white;">
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Description<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <textarea class="col-sm-8 reqinput" type="text" name="description" style="height: 150px; width: 67%; margin: 5px; margin-left: 30px;" required=""></textarea>
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <button type="submit" style="margin-top: 15px; width: 175px;" onclick="myFunction()">Update</button>
                </form>
            </div>
        </div>
    </body>
</html>