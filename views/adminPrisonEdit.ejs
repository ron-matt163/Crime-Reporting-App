<html>
    <head>
        <%- include ('partials/head') -%>
        <style>
            .rowform {
                margin-bottom: 15px;
            }
            .container-fluid {
                margin-top: 5%;
                margin-bottom: 5%;
                border:black; 
                border-width:1px; 
                border-style:solid;
                border-radius: 25px;
                background-color: lightblue;
                color: black;
            }
            input {
                color: black;
            }
            .errmsg {
                margin-left: 15px;
            }
        </style>
        <script type="text/javascript">
            function myFunction() {
                var x = document.getElementsByClassName("errmsg");
                var y = document.getElementsByClassName("reqinput")
                var i;
                for (i = 0; i < y.length; i++) {
                    if(y[i].value.length == 0) {
                        x[i].style.display = "block";
                    }
                    else {
                        x[i].style.display = "none";
                    }
                }
            }
            function dateFixer(d1) {
                var mnths = {
                    Jan: "01",
                    Feb: "02",
                    Mar: "03",
                    Apr: "04",
                    May: "05",
                    Jun: "06",
                    Jul: "07",
                    Aug: "08",
                    Sep: "09",
                    Oct: "10",
                    Nov: "11",
                    Dec: "12"
                    },
                date = d1.split(" ");
                document.getElementById("dob").value = [date[3], mnths[date[1]], date[2]].join("-");
            }
            function goBack() {
                window.history.back();
            }
        </script>
        <title>VERITAS - My Accounts</title>
    </head>
    <body>
        <%- include ('partials/loginNav') -%>
        <div class="container-fluid" style="align-content: center; width: 60%">
            <div class="row" style="margin-top: 15px;">
                <h2 class="header" style="font-size: 50px; margin-bottom: 50px;">Modify Prison Records</h2>
            </div>
            <div class="row formrow">
                <form method="POST" action="/admin/prisonReport/edit/<%= prisons.id %>" style="margin-left: 17.5%;">
                    <div class="row rowform">
                        <a onclick="goBack()" style = "padding-left: 695px; text-decoration: underline; color:navy">Go Back</a>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Prison Name<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="prisonName" required="" value="<%= prisons.name %>">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                    <div class="row rowform">
                        <label class="col-sm-4">Prison Type<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="prisonType" required="" value="<%= prisons.type %>">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">Address<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="address" name="address" required="" value="<%= prisons.address %>">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <div class="row rowform">
                        <label class="col-sm-4">City<span style="color: red; font-size: small; margin: 5px;">*</span></label>
                        <input class="col-sm-8 reqinput" type="text" name="city" required="" value="<%= prisons.city %>">
                        <p class="errmsg" style="color: red; display: none;">Field is required</p>
                    </div>
                    <button type="submit" style="margin-top: 15px; width: 175px;" onclick="myFunction()">Update</button>
                </form>
            </div>
        </div>
    </body>
</html>